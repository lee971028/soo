package day0930;

import java.awt.Color;
import java.awt.Container;

import javax.swing.JButton;
import javax.swing.JFrame;

public class SwingNullLay_10 extends JFrame{
	Container cp;
	JButton btn1,btn2;
	
	public SwingNullLay_10(String title) {
		super(title);
		cp=this.getContentPane();
		this.setBounds(200, 100, 300, 400);
		cp.setBackground(new Color(155,155,200));
		setDesign();
		setVisible(true);
	}
	
	//디자인
	public void setDesign()
	{
		//기본레이아웃 없애기
		this.setLayout(null);
		
		btn1=new JButton("◀");
		btn2=new JButton("▶");
		
		//위치 직접 지정
		btn1.setBounds(50, 100, 80, 30);
		btn2.setBounds(150, 100, 80, 30);
		
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub

		new SwingNullLay_10("레이아웃 없이 만들기");
	}

}
